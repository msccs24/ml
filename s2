import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.preprocessing import StandardScaler
from sklearn.cluster import AgglomerativeClustering
from scipy.cluster.hierarchy import dendrogram, linkage

df = pd.read_csv(r"ML\Wholesale customers data.csv")
print(df.head(5))
print("\nDataset info:\n")
print(df.info())
print(df.describe())

features = ['Channel','Fresh','Milk','Grocery','Frozen','Detergents_Paper','Delicassen']
X = df[features]

scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

agg_model = AgglomerativeClustering(n_clusters=4)
clusters = agg_model.fit_predict(X_scaled)
print(clusters)

df['Cluster'] = clusters
#linkage_matrix = linkage(X_scaled, method='single')
#linkage_matrix = linkage(X_scaled, method='complete')
#linkage_matrix = linkage(X_scaled, method='average')
linkage_matrix = linkage(X_scaled, method='ward')

plt.figure(figsize=(10,7))
dendrogram(linkage_matrix, labels = df.index)
plt.title("Dendrogram for Agglomerative Clustering")
plt.xlabel("Clients")
plt.ylabel("Eudelian Distance")
plt.show()

plt.figure(figsize=(10,7))
sns.scatterplot(x=df['Milk'], y=df['Frozen'], hue=df['Cluster'], palette='viridis')
plt.title("Agglomerative Clustering Of WholeSale Customers")
plt.xlabel("Annual Spending on Milk Products")
plt.ylabel("Annual Spending on Frozen Products")
plt.legend(title='Cluster')
plt.show()

